{
  "name": "data-viz-generator",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "run-s dev",
    "dev": "run-s watch",
    "watch": "run-p watch:*",
    "watch:ui": "vite build -c ./vite.config.ui.ts --watch --mode=development",
    "watch:plugin": "vite build -c ./vite.config.plugin.ts --watch --mode=development",
    "clean": "rimraf ./dist",
    "build": "run-s build:*",
    "prebuild": "run-s clean",
    "build:ui": "vite build -c ./vite.config.ui.ts",
    "build:plugin": "vite build -c ./vite.config.plugin.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "@visx/axis": "^3.10.1",
    "@visx/scale": "^3.5.0",
    "@visx/shape": "^3.5.0",
    "@visx/visx": "^3.11.0",
    "d3-array": "^3.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.84.0",
    "@types/node": "^22.9.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3",
    "vite": "^5.0.12",
    "vite-plugin-generate-file": "^0.1.1",
    "vite-plugin-singlefile": "^1.0.0"
  }
}
